$(document).ready(function () {
    //Add New Item Type
    $('#add_new_type_link').click(function () {
        $('#add_new_type_dialog').dialog('open');
        
        $('#add_new_item_type_msg').html('');

        return false;
    });
    $("#add_new_type_dialog").dialog({
        autoOpen: false,
        bgiframe: true,
        resizable: false,
        width: 600,
        modal: true,
        overlay: {
            backgroundColor: '#000',
            opacity: 0.5
        },
        buttons: {
            'Close': function(){
                $(this).dialog('close');
            }
        }
    });

    //Add New Item Property
    $('#add_new_property_link').click(function () {
        $('#add_new_property_dialog').dialog('open');

        return false;
    });
    $("#add_new_property_dialog").dialog({
        autoOpen: false,
        bgiframe: true,
        resizable: false,
        width: 600,
        modal: true,
        overlay: {
            backgroundColor: '#000',
            opacity: 0.5
        },
        buttons: {
            'Close': function () {
                $(this).dialog('close');
            }
        }
    });

    //Add New Item Property
    $('#add_property_value_link').click(function () {
        $('#add_property_value_dialog').dialog('open');

        return false;
    });
    $("#add_property_value_dialog").dialog({
        autoOpen: false,
        bgiframe: true,
        resizable: false,
        width: 600,
        modal: true,
        overlay: {
            backgroundColor: '#000',
            opacity: 0.5
        },
        buttons: {
            'Close': function () {
                $(this).dialog('close');
            }
        }
    });
});